<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Browser test" verbose="1" parallel="tests" thread-count="99">

    <test name="Chrome execution">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="by.zhadinets.page.demo.DemoPageTest"/>
            <class name="by.zhadinets.page.demo.AutocompletePageTest"/>
            <class name="by.zhadinets.page.demo.SpinnerPageTest"/>
        </classes>
    </test>

    <test name="Firefox Execution">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="by.zhadinets.page.demo.DemoPageTest"/>
            <class name="by.zhadinets.page.demo.AutocompletePageTest"/>
            <class name="by.zhadinets.page.demo.SpinnerPageTest"/>
        </classes>
    </test>

</suite>